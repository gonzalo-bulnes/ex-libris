= simple_form_for @record, html: { multipart: true, class: 'custom-form' } do |f|

  .form-notifications
    = f.error_notification

  .form-inputs

    .control-group.file.required
      = f.label :picture
      = f.error :picture
      = f.file_field :picture
      = f.hint :picture

    = f.input :location, input_html: { class: 'input-mini' }
    = f.input :number_of_books_estimate, input_html: { class: 'input-mini' }

  .form-actions
    = f.button :submit, { class: 'btn btn-info' }
    = link_to t('helpers.cancel'), records_path, { class: 'btn btn-link' }
