.container
  .row
    .span6.offset3
      .record
        %h1
          %i.icon-picture
          = t('helpers.record.title.show')
          %small
            <i class="icon-book"></i> 2 libros

        .row.row-desktop
          = image_tag @record.picture.url(:medium), class: "img-polaroid", class: 'span6'
        .row.row-desktop
          .span6
            .record-actions
              %span.info
                %i.icon-map-marker
                Estante
                %strong
                  = @record.location
              %span.info{ href: '#', title: 'Este registro est√° listo para revisar.' }
                %i.icon-eye-open{ style: 'font-size: 18px;' }

              %span.action
                = link_to raw('<i class="icon-plus"></i> Agregar un libro'), '#', class: 'btn'

              %nav.action.pull-right
                =# link_to raw('<i class="icon-comments"></i> 6 comentarios'), '#', class: 'btn btn-link'
