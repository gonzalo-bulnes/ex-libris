.container
  .span4.offset2

    = simple_form_for @record, html: { class: 'form-horizontal' } do |f|
      = f.input :location, input_html: { class: 'input-mini' }

      = link_to t('helpers.cancel'), records_path, { class: 'btn btn-link' }
      = f.button :submit, class: 'btn btn-info'

  .span2