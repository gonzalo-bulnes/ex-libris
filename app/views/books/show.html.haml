.container
  .row
    .span6.offset3
      .book
        %h1
          %i.icon-book
          = @book.title.truncate(24, omission: '...')
          %small
            = @book.isbn

        .row.row-desktop
          .span6
            .book-actions
              %nav.action
                %a{ href: record_path(@book.record) }
                  %i.icon-map-marker
                  Estante
                  %strong
                    = @book.record.location
